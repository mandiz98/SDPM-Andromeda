<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBlack"
    tools:context=".ClockedIn">




    <TextView
        android:id="@+id/clocked_in_timer_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="132dp"
        android:text="20:18"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/time_left_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Time Left:"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="24sp" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="260dp"
        android:text="Clocked in at:"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/room_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="320dp"
        android:text="Room:"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/clothes_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="384dp"
        android:text="Clothing:"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        />

    <ProgressBar
        android:id="@+id/progress_timer"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="228dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="64dp"
        android:progress="1"
        android:indeterminate="false"
        android:max="100"
    />


    <Button
        android:id="@+id/test_clockout_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="test clockout"
        />

</FrameLayout>